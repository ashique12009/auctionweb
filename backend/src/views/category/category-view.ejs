<%- include('../partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Category Details</h2>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td><%= category.category_id %></td>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= category.category_name %></td>
        </tr>
        <tr>
            <th>Parent Category</th>
            <td><%= category.parent_category_id || "â€”" %></td>
        </tr>
        <tr>
            <th>Created At</th>
            <td><%= category.created_at.toISOString().slice(0,19).replace('T',' ') %></td>
        </tr>
    </table>

    <div class="d-flex gap-3">
        <a href="/admin/category/edit/<%= category.category_id %>" class="btn btn-warning">Edit</a>
        <a href="/admin/category" class="btn btn-secondary">Back</a>
    </div>
</div>

<%- include('../partials/footer') %>