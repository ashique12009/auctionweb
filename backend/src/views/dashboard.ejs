<%- include('partials/header') %>

  <div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row mt-4">
      <!-- Product Category Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Product Category</h5>
            <p class="display-6 fw-bold"><%= categoryCount %></p>
          </div>
        </div>
      </div>

      <!-- Product Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Product</h5>
            <p class="display-6 fw-bold"><%= productCount %></p>
          </div>
        </div>
      </div>

      <!-- Seller Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Seller</h5>
            <p class="display-6 fw-bold"><%= sellerCount %></p>
          </div>
        </div>
      </div>

      <!-- Buyer Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Buyer</h5>
            <p class="display-6 fw-bold"><%= buyerCount %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>