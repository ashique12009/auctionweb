<%- include('../partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Edit Product</h2>

    <form method="POST" action="/admin/product/edit/<%= product.item_id %>" enctype="multipart/form-data">
        <!-- Product Images -->
        <div class="mb-3">
            <label for="images" class="form-label">Product Images</label>
            <input type="file" name="images" id="images" class="form-control" multiple accept="image/*">
            
            <!-- Show existing images -->
            <% if (images && images.length > 0) { %>
                <div class="mt-2">
                    <p>Current Images:</p>
                    <div class="d-flex flex-wrap gap-2">
                        <% images.forEach(img => { %>
                            <img src="<%= img.image_url %>" alt="Product Image" class="img-thumbnail" style="width: 120px; height: auto;">
                        <% }) %>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Seller ID -->
        <div class="mb-3">
            <label for="seller_id" class="form-label">Seller</label>
            <select name="seller_id" id="seller_id" class="form-select" required>
                <% sellers.forEach(seller => { %>
                    <option value="<%= seller.user_id %>" <%= seller.user_id === product.seller_id ? "selected" : "" %>>
                        <%= seller.first_name + ' ' + seller.last_name + ' - ' + seller.email %>
                    </option>
                <% }) %>
            </select>
        </div>

        <!-- Category -->
        <div class="mb-3">
            <label for="category_id" class="form-label">Category</label>
            <select name="category_id" id="category_id" class="form-select" required>
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.category_id %>" <%= cat.category_id === product.category_id ? "selected" : "" %>>
                        <%= cat.category_name %>
                    </option>
                <% }) %>
            </select>
        </div>

        <!-- Title -->
        <div class="mb-3">
            <label for="title" class="form-label">Product Title</label>
            <input type="text" name="title" id="title" class="form-control" 
                   value="<%= product.title %>" required>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" rows="4"><%= product.description %></textarea>
        </div>

        <div class="row">
            <div class="col-md-4">
                <!-- Starting Price -->
                <div class="mb-3">
                    <label for="starting_price" class="form-label">Starting Price</label>
                    <input type="number" step="0.01" name="starting_price" id="starting_price" 
                        class="form-control" value="<%= product.starting_price %>" required>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Reserve Price -->
                <div class="mb-3">
                    <label for="reserve_price" class="form-label">Reserve Price</label>
                    <input type="number" step="0.01" name="reserve_price" id="reserve_price" 
                        class="form-control" value="<%= product.reserve_price || '' %>">
                </div>
            </div>
            <div class="col-md-4">
                <!-- Buy Now Price -->
                <div class="mb-3">
                    <label for="buy_now_price" class="form-label">Buy Now Price</label>
                    <input type="number" step="0.01" name="buy_now_price" id="buy_now_price" 
                        class="form-control" value="<%= product.buy_now_price || '' %>">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <!-- Start Time -->
                <div class="mb-3">
                    <label for="start_time" class="form-label">Start Time</label>
                    <input type="datetime-local" name="start_time" id="start_time" 
                        class="form-control" 
                        value="<%= product.start_time.toISOString().slice(0,16) %>" required>
                </div>
            </div>
            <div class="col-md-4">
                <!-- End Time -->
                <div class="mb-3">
                    <label for="end_time" class="form-label">End Time</label>
                    <input type="datetime-local" name="end_time" id="end_time" 
                        class="form-control" 
                        value="<%= product.end_time.toISOString().slice(0,16) %>" required>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Status -->
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="status" id="status" class="form-select" required>
                        <option value="active" <%= product.status === 'active' ? "selected" : "" %>>Active</option>
                        <option value="sold" <%= product.status === 'sold' ? "selected" : "" %>>Sold</option>
                        <option value="expired" <%= product.status === 'expired' ? "selected" : "" %>>Expired</option>
                        <option value="canceled" <%= product.status === 'canceled' ? "selected" : "" %>>Canceled</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary">Update Product</button>
            <a href="/admin/product" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>