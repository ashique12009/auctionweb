<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4"><%= title %></h2>

    <!-- Search form -->
    <form method="GET" action="/product-category" class="row mb-4">
        <div class="col-md-8">
            <input type="text" name="search" class="form-control" placeholder="Search category by name" value="<%= search %>">
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    <!-- Categories table -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Parent ID</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (categories.length > 0) { %>
                <% categories.forEach(cat => { %>
                    <tr>
                        <td><%= cat.category_id %></td>
                        <td>
                            <form method="POST" action="/product-category/edit/<%= cat.category_id %>" class="d-flex">
                                <input type="text" name="category_name" class="form-control form-control-sm me-2" value="<%= cat.category_name %>">
                                <input type="hidden" name="parent_category_id" value="<%= cat.parent_category_id || '' %>">
                                <button type="submit" class="btn btn-sm btn-success">Save</button>
                            </form>
                        </td>
                        <td><%= cat.parent_category_id || "-" %></td>
                        <td><%= cat.created_at.toISOString().slice(0,19).replace('T',' ') %></td>
                        <td>
                            <form method="POST" action="/admin/product-category/delete/<%= cat.category_id %>" onsubmit="return confirm('Are you sure?')">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center text-muted">No categories found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>